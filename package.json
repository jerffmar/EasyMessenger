{
  "name": "whatsapp-manager",
  "version": "1.0.0",
  "description": "WhatsApp Management Application with Baileys",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch server/server.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cp server/server.js lib/server.js && cp -r server/services lib/ && cp -r server/routes lib/",
    "start": "node lib/index.js",
    "postbuild": "cp -r client/dist lib/public && echo 'import \"./server.js\";' > lib/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.9.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "tsx": "^4.20.3",
    "typescript": "^5.8.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}